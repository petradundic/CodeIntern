@model CodeIntern.Models.UpdateUserViewModel

@{
    ViewData["Title"] = "Update User Data";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Update User Data</h3>
                </div>
                <div class="card-body"> 
                    <form asp-action="UpdateUser" method="post" class="form">
                        <input type="hidden" asp-for="Id" />
                        @if (User.IsInRole(SD.Role_Student))
                        {
                            <div class="form-floating py-2 col-12">
                                <input asp-for="FirstName" class="form-control border-0 shadow" />
                                <label asp-for="FirstName" class="ms-2"></label>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="LastName" class="form-control border-0 shadow" />
                                <label asp-for="LastName" class="ms-2"></label>
                            </div>
                        }
                        <div class="form-group">
                            <label asp-for="Email">Email:</label>
                            <input asp-for="Email" class="form-control" required>
                        </div>

                        <button type="submit" style="margin-top:5px" class="btn btn-primary btn-block" onclick="ShowMessage('User info updated successfuly!')">Update User</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
