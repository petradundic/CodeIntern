@model EditCompanyViewModel
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="CompanyId" hidden />

            <div class="row">
                <div class="col-md-8">
                    <div class="border p-3 mt-4">
                        <div class="form-floating mb-3">
                            <input asp-for="CompanyName" class="form-control border-0 shadow" />
                            <label asp-for="CompanyName">Company Name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Website" class="form-control border-0 shadow" />
                            <label asp-for="Website">Website</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control border-0 shadow" />
                            <label asp-for="Email">Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Country" class="form-control border-0 shadow" />
                            <label asp-for="Country">Country</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="City" class="form-control border-0 shadow" />
                            <label asp-for="City">City</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Address" class="form-control border-0 shadow" />
                            <label asp-for="Address">Address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Industry" class="form-control border-0 shadow" />
                            <label asp-for="Industry">Industry</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Description" class="form-control border-0 shadow" />
                            <label asp-for="Description">Description</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="ImageUrl">Image</label>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary w-100" onclick="ShowMessage('Company updated successfully!')">
                                <i class="bi bi-save"></i> Update
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Company" asp-action="Index" class="btn btn-secondary w-100 border float-start">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
                @if (@Model.ImageUrl != null)
                {
                     <div class="col-md-4">
                        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="Company Image">
                    </div>
                }
               
            </div>
        </form>
    </div>
</div>
