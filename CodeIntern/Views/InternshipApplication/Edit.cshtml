@model EditViewModel

<!-- Your HTML form for editing the InternshipApplication -->
<form method="post">
    <input type="hidden" name="InternshipApplicationId" value="@Model.InternshipApplicationId" />
    <div class="form-floating py-2 col-12">
        <input asp-for="FirstName" class="form-control border-0 shadow" />
        <label asp-for="FirstName" class="ms-2"></label>

    </div>
    <div class="form-floating py-2 col-12">
        <input asp-for="LastName" class="form-control border-0 shadow" />
        <label asp-for="LastName" class="ms-2"></label>
    </div>
    <div class="form-floating py-2 col-12">
        <input asp-for="Email" class="form-control border-0 shadow" />
        <label asp-for="Email" class="ms-2"></label>
    </div>
    <div class="form-floating py-2 col-12">
        <input asp-for="CvFile" class="form-control border-0 shadow" type="file" id="cvFile" name="CvFile" />
        <label asp-for="CvFile" class="ms-2"></label>
    </div>
    <!-- Add other form fields as needed -->

    @if (!User.IsInRole("Student"))
    {
        <div>
            <label for="SelectedStatus">Change Status:</label>
            
                <select asp-for="SelectedStatus" class="form-select">

                <option value="In_progress">In progress</option>
                <option value="Accepted">Accepted</option>
                <option value="Declined">Declined</option>

                </select>
            
        </div>
    }

    <button type="submit" onclick="ShowMessage('Application updated successfuly!')">Update</button>
</form>
