@model InternshipApplication
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Internship</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="InternshipApplicationId" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    
                    <label asp-for="Email" class="ms-2"></label>
                    <label asp-for="Status" class="ms-2"></label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control" onclick="ShowMessage('Your application was canceled!')">Delete</button>
                    </div>
                    
                </div>


            </div>
        </form>
    </div>
</div>